{
  "name": "R Package Development",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        // Optional: point VS Code R extension to the R binary
        "r.rterm.linux": "/usr/local/bin/R",
        "r.lsp.path": "/usr/local/bin/R"
      },
      "extensions": [
        "Ikuyadeu.r" // R extension with built-in language server
      ]
    }
  },
  "postCreateCommand": "Rscript -e 'if (requireNamespace(\"devtools\", quietly = TRUE) && file.exists(\"DESCRIPTION\")) devtools::install_deps(dependencies = TRUE)'"
}
